<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_api_inicio"
        android:layout_width="170dp"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_book_api_inicio"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/libro" />

            <TextView
                android:id="@+id/tv_titulo_api_inicio"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola"
                android:text="TextView"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/img_book_api_inicio"
                app:layout_constraintTop_toBottomOf="@+id/img_book_api_inicio" />

            <TextView
                android:id="@+id/tv_autor_api_inicio"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_titulo_api_inicio"
                app:layout_constraintTop_toBottomOf="@+id/tv_titulo_api_inicio" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>